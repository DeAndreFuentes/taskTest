     <section id="list">
             <h3>Your task</h3>
            <div id="pendingTasks"></div>
        </section>
 
        <section id="details">
              <h3>Task information</h3>

              <div id="alertError" class="hide alert alert-danger">

                <ul id="listErrors"></ul>
              </div>
        
           <div class="control">
               <label>ID</label>
               <input  class="form-control" type="text"  id="txtId" readonly>
           </div>

           <div class="control">
            <label> Title: </label>

           <input   class="form-control" type="contorl"  type="text" id="txtTitle"  placeholder="Task Title">
        </div>

           <div class="control">
              <label class="lblImp"></label> Is it Important? </label>
               <i id="iconImp" class="far fa-star"></i>
           </div>

           <div class="control">
            <label> Start: </label>
            <input  class="form-control" type="datetime-local" id="txtSartDate" placeholder="start Date">
         </div>


         <div class="control">
            <label> End: </label>
            <input class="form-control" type="datetime-local" id="txtDueDate" placeholder="Due Date">
         </div>




           
           <div class="control">
               <label>Status:</label>
           <select id="selStatus" placeholder="Select Status" >
             <option value="0" selected>--Select Status--</option> 
             <option value="1">pending</option>
             <option value="2">In Progress</option>
             <option value="3">Blocked</option>
             <option value="9">Done</option>


           </select>
        </div>


          <div class="control">
              <label    class="lblDesc">Descrioption</label>
              <textarea id="txtDescription" class="form-control" ></textarea>

        <div class="control">
            <button id="btnSave" class="btn btn-primary">Save Task</button>
        </div>
        </section>    <button id="btnDetails" class="btn btn-secondary">
             <i class="far fa-eye-slash"></i>
             Hide details
            </button>

         
           


        



